<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#262cdb">

   
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:gravity="center_horizontal"
   	    android:padding="20dp"
   	    android:orientation="vertical"
		android:backgroundTint="#47a1d5">
   	    
   	    
   	    <Button 
   	        android:id="@+id/verWeb"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:onClick="lanzarActivity"
   	        android:text="Navegar sitio Web"
			android:backgroundTint="#47a1d5"
			android:textColor="#fbf7f7" />
   	    
   	    
   	    <Button 
   	        android:id="@+id/verContactos"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:onClick="lanzarActivity"
   	        android:text="Contactos de mi agenda"
			android:backgroundTint="#47a1d5"
			android:textColor="#fbf7f7" />
   	    
   	    <Button 
   	        android:id="@+id/llamar"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:onClick="lanzarActivity"
   	        android:text="Iniciar una llamada telefonica"
			android:backgroundTint="#47a1d5"
			android:textColor="#fbf7f7" />
   	    
   	    <Button 
   	        android:id="@+id/google"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:onClick="lanzarActivity"
   	        android:text="Realizar una busqueda en google"
			android:backgroundTint="#47a1d5"
			android:textColor="#fbf7f7" />
   	    
   	    <Button 
   	        android:id="@+id/mail"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:onClick="lanzarActivity"
   	        android:text="Enviar correo electronico"
			android:backgroundTint="#47a1d5"
			android:textColor="#fbf7f7" />
   	    
   	    <Button 
   	        android:id="@+id/camara"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:onClick="lanzarActivity"
   	        android:text="Lanzar cámara de fotos"
			android:backgroundTint="#47a1d5"
			android:textColor="#fbf7f7" />
   	    
   	    <Button 
   	        android:id="@+id/galeria"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:onClick="lanzarActivity"
   	        android:text="Lanzar galeria imagenes"
			android:backgroundTint="#47a1d5"
			android:textColor="#fbf7f7" />
   	    
   	    <Button 
   	        android:id="@+id/mapas"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:onClick="lanzarActivity"
   	        android:text="Ver ubicación en mapas"
			android:backgroundTint="#47a1d5"
			android:textColor="#fbf7f7" />
   	    
   	    
   	    <ImageView 
   	        android:id="@+id/contenedorImagen"
   	        android:layout_width="match_parent"
   	        android:layout_height="300dp"
   	        android:adjustViewBounds="true"/> 
   	        
   	</LinearLayout> 

</ScrollView>